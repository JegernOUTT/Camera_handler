<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oit_sergei.KRUGIS.toast_pressed_activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@drawable/main_color" />

        <Space
            android:layout_height="10dp"
            android:layout_width="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exit_app_block"
                android:id="@+id/exit_app_block_btn"
                android:onClick="exit_blockCamera"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Space
            android:layout_height="5dp"
            android:layout_width="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exit_app_block_mic"
                android:id="@+id/exit_app1_block_btn"
                android:onClick="exit_blockMicro"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_white"
                android:id="@+id/add_to_white_btn"
                android:layout_weight="50"
                android:onClick="add_to_white"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:minWidth="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_blavk"
                android:id="@+id/add_to_black_btn"
                android:layout_weight="50"
                android:onClick="add_to_black"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/allow_this"
                android:id="@+id/allow_this_btn"
                android:layout_weight="50"
                android:onClick="allowThisTime"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/exit_app"
                android:id="@+id/exit_app_btn"
                android:layout_weight="50"
                android:onClick="exit_pack"
                style="@style/ThemeButton"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
